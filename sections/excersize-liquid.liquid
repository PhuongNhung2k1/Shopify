        "settings": [
          {
            "type": "text",
            "id": "exercise",
            "label": "Test exersize liquid"
          }
        ]
      }
    ],

    "presets": [
      {
        "name": "Test exersize liquid",
        "blocks": [
          {
            "type": "text"
          }
        ]
      }
    ]
  }
{% endschema %}